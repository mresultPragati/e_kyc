{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of source files
    "strict": true, // Enable strict type checking
    "jsx": "react", // or "react-jsx" for React 17+
    "moduleResolution": "node", // Resolve modules like React
    "esModuleInterop": true, // Ensure compatibility with CommonJS modules
    "skipLibCheck": true, // Optional, speeds up build by skipping type checks in declaration files
    "forceConsistentCasingInFileNames": true
  }
}
 
